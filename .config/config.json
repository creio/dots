{
    "audio": "pulseaudio",
    "bootloader": "systemd-bootctl",
    "custom-commands": [
        "cd /home/creio; git clone https://aur.archlinux.org/paru.git",
        "chown -R creio:creio /home/creio/paru",
        "usermod -aG docker creio"
    ],
    "!encryption-password": "1111",
    "filesystem": "btrfs",
    "gfx_driver": "All open-source (default)",
    "harddrives": [
        "/dev/sda"
    ],
    "swap": true,
    "hostname": "box",
    "kernels": [
        "linux"
    ],
    "mirror-region": "Worldwide",
    "nic": {
        "NetworkManager": true
    },
    "ntp": true,
    "packages": ["docker", "git", "wget", "zsh"],
    "profile": null,
    "script": "guided",
    "services": ["docker"],
    "!root-password": "11",
    "superusers": {
        "creio": {
            "!password": "1"
        }
    },
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "keyboard-language": "us",
    "keyboard-layout": "us",
    "timezone": "Europe/Moscow",
    "users": {},
    "/dev/sda": {
        "partitions": [
            {
                "boot": true,
                "encrypted": false,
                "filesystem": {
                    "format": "fat32"
                },
                "format": true,
                "mountpoint": "/boot",
                "size": "513MB",
                "start": "5MB",
                "type": "primary"
            },
            {
                "btrfs": {
                    "subvolumes": {
                        "@.snapshots": "/.snapshots",
                        "@home": "/home",
                        "@log": "/var/log",
                        "@pkgs": "/var/cache/pacman/pkg"
                    }
                },
                "encrypted": true,
                "filesystem": {
                    "format": "btrfs"
                },
                "format": true,
                "mountpoint": "/",
                "size": "100%",
                "start": "518MB",
                "type": "primary"
            }
        ],
        "wipe": true
    }
}
