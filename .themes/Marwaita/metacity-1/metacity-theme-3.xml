<!-- meaningful constants -->

<constant name="D_titlebar" value="gtk:custom(bg_color,gtk:bg[NORMAL])"/>
<constant name="D_titlebar_fg" value="gtk:custom(D_title,gtk:fg[NORMAL])"/>
<constant name="D_titlebar_fg_unfocused" value="gtk:custom(D_title_unfocused,gtk:fg[INSENSITIVE])"/>
<constant name="B_titlebar" value="gtk:custom(B_metacity,gtk:bg[NORMAL])"/>
<constant name="D_B_titlebar" value="gtk:custom(D_B_metacity,gtk:bg[NORMAL])"/>

<constant name="C_titlebar_focused" value="gtk:custom(metacity_theme,gtk:bg[NORMAL])"/>
<constant name="C_titlebar_unfocused" value="gtk:custom(metacity_theme_unfocused,gtk:bg[NORMAL])"/>

<constant name="C_title_focused" value="gtk:custom(wm_title,gtk:fg[NORMAL])"/>
<constant name="C_title_unfocused" value="gtk:custom(wm_unfocused_title,gtk:fg[INSENSITIVE])"/>

<!-- geometries -->

<frame_geometry name="normal" title_scale="medium" rounded_top_left="true" rounded_top_right="true">
  <distance name="left_width" value="1"/>
  <distance name="right_width" value="1"/>
  <distance name="bottom_height" value="1"/>
  <distance name="left_titlebar_edge" value="0"/>
  <distance name="right_titlebar_edge" value="5"/>
  <distance name="title_vertical_pad" value="25"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="5" right="0" top="5" bottom="4"/>
  <aspect_ratio name="button" value="1"/><!-- width of button -->
</frame_geometry>

<frame_geometry name="max" rounded_top_left="false" rounded_top_right="false" parent="normal">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <distance name="left_titlebar_edge" value="0"/>
  <distance name="right_titlebar_edge" value="3"/>
  <border name="button_border" left="4" right="0" top="4" bottom="4"/>
</frame_geometry>

<frame_geometry name="tiled_left" parent="normal">
</frame_geometry>

<frame_geometry name="tiled_right" parent="normal">
</frame_geometry>

<frame_geometry name="nobuttons" hide_buttons="true" parent="normal">
</frame_geometry>

<frame_geometry name="modal" parent="nobuttons">
</frame_geometry>

<frame_geometry name="small" title_scale="small" parent="normal">
  <distance name="title_vertical_pad" value="12"/>
</frame_geometry>

<frame_geometry name="border" has_title="false" rounded_top_left="true" rounded_top_right="true" parent="normal">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<frame_geometry name="borderless" has_title="false" rounded_top_left="true" rounded_top_right="true" parent="normal">
  <distance name="left_width" value="0"/>
  <distance name="right_width" value="0"/>
  <distance name="bottom_height" value="0"/>
  <distance name="title_vertical_pad" value="0"/>
  <border name="button_border" left="0" right="0" top="0" bottom="0"/>
  <border name="title_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<frame_geometry name="attached" hide_buttons="true" rounded_bottom_left="true" rounded_bottom_right="true" parent="normal">
  <distance name="title_vertical_pad" value="4"/>
</frame_geometry>

<!-- drawing operations -->

<!-- title -->

<draw_ops name="title_focused">
  <title version="< 3.1"
    x="(0 `max` ((width - title_width) / 2))"
    y="(0 `max` ((height - title_height) / 2))"
    color="C_title_focused"/>
  <title version=">= 3.1"
    x="(0 `max` ((frame_x_center - title_width / 2) `min` (width - title_width)))"
    y="(0 `max` ((height - title_height) / 2))"
    ellipsize_width="width"
    color="C_title_focused"/>
</draw_ops>

<draw_ops name="dialog_title_focused">
  <title version="< 3.1"
    x="(0 `max` ((width - title_width) / 2))"
    y="(0 `max` ((height - title_height) / 2))"
    color="D_titlebar_fg"/>
  <title version=">= 3.1"
    x="(0 `max` ((frame_x_center - title_width / 2) `min` (width - title_width)))"
    y="(0 `max` ((height - title_height) / 2))"
    ellipsize_width="width"
    color="D_titlebar_fg"/>
</draw_ops>

<draw_ops name="dialog_title_unfocused">
  <title version="< 3.1"
    x="(0 `max` ((width - title_width) / 2))"
    y="(0 `max` ((height - title_height) / 2))"
    color="D_titlebar_fg_unfocused"/>
  <title version=">= 3.1"
    x="(0 `max` ((frame_x_center - title_width / 2) `min` (width - title_width)))"
    y="(0 `max` ((height - title_height) / 2))"
    ellipsize_width="width"
    color="D_titlebar_fg_unfocused"/>
</draw_ops>

<draw_ops name="title_unfocused">
  <title version="< 3.1"
    x="(0 `max` ((width - title_width) / 2))"
    y="(0 `max` ((height - title_height) / 2))"
    color="C_title_unfocused"/>
  <title version=">= 3.1"
    x="(0 `max` ((frame_x_center - title_width / 2) `min` (width - title_width)))"
    y="(0 `max` ((height - title_height) / 2))"
    ellipsize_width="width"
    color="C_title_unfocused"/>
</draw_ops>

